# Trading AI - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# Data Provider (supports: coinbase, kraken, cryptocompare, binance)
# For Canada: Use coinbase or kraken (binance is restricted)
DATA_PROVIDER=coinbase  # Options: coinbase, kraken, cryptocompare, binance

# Coinbase Advanced Trade API (Recommended for Canada)
# Get your API credentials from: https://portal.cdp.coinbase.com/access/api
# API Key format: organizations/YOUR_ORG_ID/apiKeys/YOUR_KEY_ID
COINBASE_API_KEY=your_api_key_name_here
COINBASE_API_SECRET=your_private_key_pem_here
COINBASE_API_PASSPHRASE=

# Kraken API (Alternative for Canada)
# KRAKEN_API_KEY=
# KRAKEN_API_SECRET=

# CryptoCompare API (No exchange account needed - alternative)
# CRYPTOCOMPARE_API_KEY=

# Binance API (Legacy - may not work in Canada)
# BINANCE_API_KEY=
# BINANCE_API_SECRET=

# Telegram Bot (Optional - needed for Phase 4)
TELEGRAM_TOKEN=
TELEGRAM_CHAT_ID=

# FTMO Account (Optional - can add later)
FTMO_LOGIN=
FTMO_PASS=
FTMO_SERVER=

# Database
DB_URL=sqlite:///tradingai.db
# Alternative PostgreSQL:
# DB_URL=postgresql+psycopg://user:pass@localhost:5432/tradingai

# Confidence & Thresholds
CONFIDENCE_THRESHOLD=0.75
ENSEMBLE_WEIGHTS=0.35,0.40,0.25  # LSTM, Transformer, RL

# Safety Rails
KILL_SWITCH=false
MAX_SIGNALS_PER_HOUR=10
MAX_SIGNALS_PER_HOUR_HIGH=5

# Latency Budget
LATENCY_BUDGET_MS=500

# Model Configuration
MODEL_VERSION=v1.0.0
MODEL_PATH=models/promoted/

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# AWS (Optional - for DVC S3 remote)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
